<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/backgroundColor"
    tools:context=".user.ui.faculty.FacultyFragment"
    tools:targetApi="lollipop">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="?attr/cardViewBackground"
        android:background="#FBFAFA">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telecommunication Technology"
                android:gravity="center"
                android:textColor="?attr/primaryTextColor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="?attr/secondaryTextColor"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tctDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:id="@+id/tctNoData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/cardViewBackground"
                android:visibility="gone"
                android:orientation="vertical">
                <include layout="@layout/no_data_found"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science and Technology"
                android:gravity="center"
                android:textColor="?attr/primaryTextColor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="?attr/secondaryTextColor"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cstDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:id="@+id/cstNoData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="?attr/cardViewBackground"
                android:orientation="vertical">
                <include layout="@layout/no_data_found"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Data Telecommunication and Networking"
                android:gravity="center"
                android:textColor="?attr/primaryTextColor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="?attr/secondaryTextColor"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dntDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:id="@+id/dntNoData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/primaryTextColor"
                android:visibility="gone"
                android:orientation="vertical">
                <include layout="@layout/no_data_found"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>