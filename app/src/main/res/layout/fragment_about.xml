<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.ui.about.AboutFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/fci"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About FCI"
            android:textSize="@dimen/title_size1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:fontFamily="@string/bold"
            android:textColor="?attr/primaryTextColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collage_description"
            android:textSize="@dimen/text_size1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:fontFamily="@string/light"
            android:textColor="?attr/secondaryTextColor"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/secondaryTextColor"
            android:layout_marginTop="@dimen/text_margin"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="@dimen/title_size1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:fontFamily="@string/bold"
                    android:textColor="?attr/backgroundColor"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/backgroundColor"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Telecommunication Technology"
                            android:textSize="@dimen/text_size"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/text_margin"
                            android:layout_marginHorizontal="@dimen/text_margin"
                            android:fontFamily="@string/bold"
                            android:textColor="?attr/primaryTextColor"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?attr/secondaryTextColor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Science and Technology"
                            android:textSize="@dimen/text_size"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/text_margin"
                            android:layout_marginHorizontal="@dimen/text_margin"
                            android:fontFamily="@string/bold"
                            android:textColor="?attr/primaryTextColor"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?attr/secondaryTextColor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Telecommunication and Networking"
                            android:textSize="@dimen/text_size"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/text_margin"
                            android:layout_marginHorizontal="@dimen/text_margin"
                            android:fontFamily="@string/bold"
                            android:textColor="?attr/primaryTextColor"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?attr/secondaryTextColor"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:textSize="@dimen/text_size3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:fontFamily="@string/bold"
            android:textColor="?attr/primaryTextColor"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:layout_margin="@dimen/text_margin"
            android:clipToPadding="true"
            android:foregroundGravity="center"
            android:outlineAmbientShadowColor="?attr/primaryTextColor"
            android:outlineSpotShadowColor="?attr/buttonColor"
            android:overScrollMode="never"
            tools:targetApi="p" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                android:textSize="@dimen/title_size1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@string/bold"
                android:textColor="?attr/primaryTextColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feni Computer Institute"
                android:textSize="@dimen/text_size1"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:fontFamily="@string/light"
                android:textColor="?attr/primaryTextColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Ranir Hat,Kazirbag,Feni"
                android:textSize="@dimen/text_size1"
                android:layout_margin="@dimen/text_margin"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:fontFamily="@string/light"
                android:textColor="?attr/primaryTextColor"/>
            <ImageView
                android:id="@+id/mapImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/fci_map"
                android:layout_margin="20dp"
                android:scaleType="fitXY"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>